@page
@model UniCare.Pages.NewsModel
@{
}
<section id="breadcrumb-area" style=" background: rgba(0, 0, 0, 0) url(../image/breadcrumb-bg.jpg) no-repeat scroll center center / cover;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcrumb-title text-center">
                    <h1 style="color:black;">News</h1>
                    <a href="/" style="color:black;">Home</a> <i class="fa fa-angle-right" style="color:black;"></i> <span style="color:black;">News</span>
                </div> <!-- /.page-breadcumb -->
            </div>
        </div>
    </div>
</section>


<section id="blog-post" class="has-full-height-background-wrapper">
    <div class="container">
        <div class="row">
            <!-- .blog-content -->


            <div class="col-lg-6 col-md-6 col-xs-12 col-sm-12">




                @foreach (var item in Model.NewsBlog)
                {
                    <!--Start single blog post item-->
                    <div class="single-blog-post-item text-center">
                        <div class="blog-img-holder">
                            <img src="@item.Image" alt="">
                            <div class="overlay">
                                <div class="inner-holder">
                                    <ul class="button">
                                        <li><a asp-page="./More" asp-route-id="@item.Id"><i class="fa fa-link"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="blog-post-date">
                                <h1>
                                    @item.Date.ToString("dd")
                                    <br> <span>
                                        @item.Date.ToString("MMM")
                                    </span>
                                </h1>
                            </div>
                        </div>
                        <div class="blog-content-box">
                            <div class="single-bolg-title">
                                <h3>@item.Title</h3>

                            </div>
                            <div class="single-blog-text">
                                <div class="single-blog-read-more">
                                    <a asp-page="./More" asp-route-id="@item.Id">read more</a>
                                </div>
                            </div>
                        </div>
                    </div>

                }


            </div> <!-- /.blog-content -->
        </div>
    </div>
</section>
